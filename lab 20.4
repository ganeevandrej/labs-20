#include <iostream>
#include <math.h>

using namespace std;
int main()
{
    float a[10][2];
    int n;

    cin >> n;

    int i;
    for (i = 0; i < n; ++i) {
        cin >> a[i][0];
        cin >> a[i][1];
    }

    int amax = 0;
    float r, rmax= 0;
    for (i = 0; i < n; ++i) {
        if ((a[i][0] < 0) && (a[i][1]>0)) {
            r = sqrt(pow(a[i][0], 2) + pow(a[i][1], 2));
            if (r > rmax || i == 0) {
                rmax = r;
                amax = i;
            }
        }
    }

    cout << amax + 1, a[amax][0], a[amax][1];
    return 0;
}
